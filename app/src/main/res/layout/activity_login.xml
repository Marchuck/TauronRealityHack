<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="pl.marczak.tauronrealityhack.LoginActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:background="@mipmap/logo_placeholder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/facebook_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/facebook_button"
            android:layout_marginLeft="@dimen/login_button_lr_margin"
            android:layout_marginRight="@dimen/login_button_lr_margin"
            android:layout_marginTop="@dimen/facebook_button"
            android:background="@drawable/facebook_button"
            android:drawableLeft="@mipmap/ic_facebook"
            android:paddingLeft="@dimen/padding_button_login"
            android:paddingRight="@dimen/padding_button_login"
            android:text="Log in with facebook"
            android:textColor="@android:color/white" />


    </LinearLayout>

</LinearLayout>
